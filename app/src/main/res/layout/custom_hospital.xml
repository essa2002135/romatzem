<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="385dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hoinfotextbox" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/imageView24"
        android:layout_alignRight="@+id/imageView24"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/hoinfo01" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView26"
        android:layout_alignEnd="@+id/imageView24"
        android:layout_alignRight="@+id/imageView24"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/hoinfo02" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView27"
        android:layout_alignEnd="@+id/imageView24"
        android:layout_alignRight="@+id/imageView24"

        android:layout_marginTop="5dp"

        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/hoinfo02" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_toStartOf="@+id/imageView26"
        android:layout_toLeftOf="@+id/imageView26"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/imageView27"
        android:layout_toLeftOf="@+id/imageView27"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView23"
        android:layout_toStartOf="@+id/imageView28"
        android:layout_toLeftOf="@+id/imageView28"
        android:text="TextView" />
</RelativeLayout>