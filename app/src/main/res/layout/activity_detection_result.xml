<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detectionResult">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:shadowColor="#00FFF9F9"
        android:textStyle="bold"
        android:text="هل أنا مصاب؟"

        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/ifiline" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/textbox" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_below="@+id/imageView17"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
     android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/textbox" />

    <TextView
        android:id="@+id/comment1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="" />

    <TextView
        android:id="@+id/comment2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignTop="@+id/imageView18"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="" />


</RelativeLayout>